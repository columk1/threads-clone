{
  "name": "threads-clone",
  "packageManager": "pnpm@10.6.0",
  "author": "Colum Kelly",
  "scripts": {
    "dev:next": "next dev --turbopack",
    "dev": "run-p dev:*",
    "build": "next build",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit --pretty",
    "test": "vitest run --no-file-parallelism",
    "test:watch": "vitest watch --no-file-parallelism",
    "test:coverage": "vitest run --no-file-parallelism --coverage",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -c production -- drizzle-kit migrate",
    "db:studio": "dotenv -c production -- drizzle-kit studio",
    "db:push": "dotenv -c local -- drizzle-kit push",
    "db:seed": "node --env-file=.env.local src/lib/db/seed/seed.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@conform-to/react": "^1.2.2",
    "@conform-to/zod": "^1.2.2",
    "@libsql/client": "^0.14.0",
