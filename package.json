    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@t3-oss/env-nextjs": "^0.11.1",
    "arctic": "^3.2.1",
    "babel-plugin-react-compiler": "19.0.0-beta-e1e972c-20250221",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "lucide-react": "^0.453.0",
    "next": "15.2.2-canary.1",
    "next-client-cookies": "^2.0.1",
    "next-themes": "^0.3.0",
    "nodemailer": "^6.10.0",
    "openai": "^4.85.4",
    "pino": "^9.6.0",
    "pino-pretty": "^11.3.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "^0.33.5",
    "sonner": "^2.0.1",
    "tailwind-merge": "^2.6.0",
